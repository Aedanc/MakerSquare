<UserControl x:Class="ForwardLayoutTest.XAML.CollisionComponentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ForwardLayoutTest.XAML"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Name="panel">
            <TextBlock FontWeight="Bold" FontSize="18" HorizontalAlignment="Center">=== Composant de Collision ===</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="75">Taille: </TextBlock>
                <TextBox  Name="VectorXTextBox" PreviewTextInput="NumberValidationTextBox" Width="25">1</TextBox>
                <TextBox  Name="VectorYTextBox" PreviewTextInput="NumberValidationTextBox" Width="25">1</TextBox>
            </StackPanel>
            <!--<StackPanel Orientation="Horizontal">
                <TextBlock Width="75">Trigger: </TextBlock>
                <CheckBox Name="TriggerCheckBox"></CheckBox>
            </StackPanel>-->
            <Button Click="deleteComponent">Supprimer</Button>
        </StackPanel>
    </Grid>
</UserControl>
