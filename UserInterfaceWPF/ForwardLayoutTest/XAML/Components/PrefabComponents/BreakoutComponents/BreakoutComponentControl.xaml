<UserControl x:Class="ForwardLayoutTest.XAML.Components.BreakoutComponentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ForwardLayoutTest.XAML.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Name="panel">
            <TextBlock FontWeight="Bold" FontSize="18" HorizontalAlignment="Center">=== Composant de Casse-Briques ===</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Vitesse de la balle :</TextBlock>
                <TextBox Margin="69,0,0,0" Name="LivesTextBox" PreviewTextInput="NumberValidationTextBox" MinWidth="50">1</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Nombre de briques au départ :</TextBlock>
                <TextBox Margin="7,0,0,0" Name="BricksTextBox" PreviewTextInput="NumberValidationTextBox" MinWidth="50">1</TextBox>
            </StackPanel>
            <Button Click="DeleteComponent">Supprimer les composants de Casse-Briques</Button>
        </StackPanel>
    </Grid>
</UserControl>
